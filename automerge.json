{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge configuration for patch updates",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "merge",
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    }
  ]
}

