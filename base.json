{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "extends": ["config:recommended"],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "automergeSchedule": ["at any time"],
  "schedule": ["at any time"],
  "separateMultipleMinor": true,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "enabled": true,
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "groupName": "all patch & minor dev dependencies"
    },
    {
      "enabled": true,
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "groupName": "all patch app dependencies"
    },
    {
      "enabled": true,
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "7 days",
      "automerge": false,
      "groupName": "all minor app dependencies"
    },
    {
      "enabled": true,
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "14 days",
      "automerge": false,
      "groupName": "all major dev dependencies"
    },
    {
      "enabled": true,
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "1 month",
      "automerge": false,
      "groupName": "all major app dependencies"
    }
  ]
}
