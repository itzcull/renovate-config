{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "merge",
  "platformAutomerge": true,
  "automergeSchedule": [
    "at any time"
  ],
  "schedule": [
    "0 9 * * *"
  ],
  "assignees": [
    "itzcull"
  ],
  "separateMultipleMinor": false,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "groupName": "all patch & minor dev dependencies"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "groupName": "all patch app dependencies"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "groupName": "all minor app dependencies"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "groupName": "all major dependencies"
    }
  ]
}